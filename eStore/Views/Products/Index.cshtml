@model IEnumerable<BusinessObjects.Product>

@{
    ViewData["Title"] = "Products List";
}

<h1>Products</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Create New Product</a>
</p>

<div class="row">
    <div class="col-md-5">
            <div class="form-group">
                <label for="searchString" class="control-label">Search: </label>
                <input id="searchString" name="searchString"
                       class="form-control" />
            </div>
            <div class="form-group">
                <input type="button" id="btnSearch" value="Search" class="btn btn-outline-success" />
            </div>
    </div>
    <div class="col-md-5 offset-md-1">
            <div class="form-group mb-0">
                <label class="control-label mb-0">Filter by Unit Price: </label>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="startPrice" class="control-label d-inline">Start Price: </label>
                        <input id="startPrice" name="startPrice"
                               class="form-control" type="number" step="any"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="endPrice" class="control-label d-inline">End Price: </label>
                        <input id="endPrice" name="endPrice"
                               class="form-control" type="number" step="any"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="button" id="btnFilter" value="Filter" class="btn btn-outline-success" />
            </div>
    </div>
    <div class="col-12 text-danger" id="searchError">
        
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
