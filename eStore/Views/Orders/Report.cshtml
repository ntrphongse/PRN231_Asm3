@model IEnumerable<BusinessObjects.Order>

@{
    ViewData["Title"] = "Orders Sales Report";
}

<h1>Orders Sales Report</h1>

<div class="row">
    <div class="col-md-6">
        <div class="form-group mb-0">
            <label class="control-label mb-0">Filter by Order Date: </label>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="startDate" class="control-label d-inline">Start Date: </label>
                    <input id="startDate" name="startDate"
                           class="form-control" type="datetime-local" step="any" value="@ViewData["StartDate"]" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="endDate" class="control-label d-inline">End Date: </label>
                    <input id="endDate" name="endDate"
                           class="form-control" type="datetime-local" step="any" value="@ViewData["EndDate"]" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="button" id="btnReport" value="Get Report" class="btn btn-outline-success" />
        </div>
    </div>
    <div class="col-12 text-danger" id="reportError">
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Freight)
            </th>
            <th>
