@using Microsoft.AspNetCore.Identity
@using eStoreLibrary
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        @if (eStoreClientUtils.IsAdmin(User))
        {
            <li class="nav-item">
        <a  class="nav-link text-dark">Hello @User.Identity.Name!</a>
    </li>
        } else
        {
            <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
        }

    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Members" asp-action="Logout">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Members" asp-action="Login">Login</a>
    </li>
}
</ul>
